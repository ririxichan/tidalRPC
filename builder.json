{
	"appId": "ririxidev.TidalRPC",
	"productName": "tidalRPC",
	"directories": {
		"app": "dist",
		"buildResources": "src/assets",
		"output": "app"
	},
	"asar": true,
	"dmg": {
		"background": "src/assets/background.png",
		"window": {
			"width": 660,
			"height": 400
		},
		"contents": [
			{
				"x": 180,
				"y": 170
			},
			{
				"x": 480,
				"y": 170,
				"type": "link",
				"path": "/Applications"
			}
		],
		"title": "Discord RPC for Tidal Desktop app",
		"writeUpdateInfo": false
	},
	"nsis": {
		"differentialPackage": false
	},
	"mac": {
		"icon": "src/assets/macIcon.icns",
		"target": { "target": "default", "arch": "universal" },
		"artifactName": "tidalRPC-mac-universal.${ext}",
		"publish": { "provider": "github", "releaseType": "draft" }
	},
	"win": {
		"target": "nsis",
		"icon": "src/assets/windows.ico",
		"artifactName": "tidalRPC-installer.exe",
		"publish": { "provider": "github", "releaseType": "draft" }
	},
	"npmRebuild": false
}
